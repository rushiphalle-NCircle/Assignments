<Window x:Class="Assignment10.Commands.Views.WallOpeningsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wall Openings"
        Height="400" Width="700"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding WallLevelName, StringFormat=Level: {0}}"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Openings}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Category" Binding="{Binding CategoryName}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding TypeName}" Width="*" />
                <DataGridTextColumn Header="Level" Binding="{Binding LevelName}" Width="*" />
                <DataGridTextColumn Header="Width (mm)" Binding="{Binding WidthMm, StringFormat={}{0:0}}" Width="120" />
                <DataGridTextColumn Header="Height (mm)" Binding="{Binding HeightMm, StringFormat={}{0:0}}" Width="120" />
                <DataGridTextColumn Header="Id" Binding="{Binding IdText}" Width="90" />
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
