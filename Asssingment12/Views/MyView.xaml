<!-- Assignment12/View/MyView.xaml -->
<Window x:Class="Assignment12.View.MyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assignment12 - Level-wise Highlight"
        Width="420" Height="560"
        WindowStartupLocation="CenterOwner">

    <DockPanel>
        <!-- Top bar -->
        <StackPanel Orientation="Horizontal" Margin="8" DockPanel.Dock="Top">
            <Button Content="Refresh"
                    Padding="10,4"
                    Command="{Binding RefreshCommand}"/>
        </StackPanel>

        <!-- Tree -->
        <TreeView x:Name="Tree"
                  Margin="8"
                  ItemsSource="{Binding Levels}"
                  SelectedItemChanged="Tree_SelectedItemChanged">

            <!-- Generic hierarchical template applied to all nodes -->
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </DockPanel>
</Window>
