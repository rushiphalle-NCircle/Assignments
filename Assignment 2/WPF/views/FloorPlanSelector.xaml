<Window x:Class="Assignment2.Commands.FloorPlanSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Floor Plan Selector" Height="180" Width="360" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Dropdown -->
        <ComboBox x:Name="MyComboBox"
                  Width="260" Height="30"
                  ItemsSource="{Binding}"
                  DisplayMemberPath="Name" />

        <!-- Spacer -->
        <Rectangle Grid.Row="1" Height="8" Fill="Transparent"/>

        <!-- Activate button -->
        <Button Grid.Row="2"
                Width="120" Height="30"
                HorizontalAlignment="Center"
                Content="Activate"
                Click="Activate_Click" Margin="0,35,0,-35">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.396"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
