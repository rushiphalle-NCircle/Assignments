<Window x:Class="Assignment3S.Commands.FloorPlanSelector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Floor Plan Selector" Height="180" Width="360"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16,14,16,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ComboBox Width="260" Height="30"
                  ItemsSource="{Binding Items}"
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  DisplayMemberPath="Name" Margin="34,0,34,0" Grid.RowSpan="2" />

        <Rectangle Grid.Row="2" Height="8" Fill="Transparent"/>

        <Button Grid.Row="3"
                Width="120" Height="30"
                HorizontalAlignment="Left"
                Content="Activate"
                Command="{Binding ActivateCommand}" Margin="34,29,0,-29" />

        <Button Grid.Row="3"
                Width="120" Height="30"
                HorizontalAlignment="Left"
                Content="Close"
                Command="{Binding CloseCommand}" Margin="174,29,0,-29" />
    </Grid>
</Window>
